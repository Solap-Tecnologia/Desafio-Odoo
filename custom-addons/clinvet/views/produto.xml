<?xml version='1.0' encoding='utf-8'?>
<odoo>
	<data>
		
		<!-- Form view -->
		<record model='ir.ui.view' id='produto_form_view'>
			<field name='name'>produto.form</field>
			<field name='model'>product.template</field>
			<field name='inherit_id' ref='product.product_template_only_form_view' />
			<field name='arch' type='xml'>
			<group>								
				<xpath expr='//div[@name="button_box"]' position='attributes'>
					<attribute name='invisible'/>
				</xpath>
				<xpath expr='//field[@name="name"]' position='replace'>
					<label string="Nome do Produto"/>
					<field name="name" default_focus="1" placeholder="Nome do Produto" />
				</xpath>
				<xpath expr='//field[@name="description"]' position='replace'>
					<label string="Descrição do Produto"/>
					<field name="description" default_focus="1" placeholder="Descrição do Produto" />
				</xpath>
				<xpath expr='//field[@name="list_price"]' position='replace'>
					<label string="Preço do Produto"/>
					<field name="list_price" default_focus="1" placeholder="Preço do Produto" />
				</xpath>
				<xpath expr='//field[@name="description"]' position='before'>
					<field name="description"/>
				</xpath>
		    	<xpath expr='//div[@name="button_box"]' position='attributes'>
					<attribute name='invisible'></attribute>
				</xpath>
				<xpath expr='//div[@name="options"]' position='attributes'>
					<attribute name='invisible'></attribute>
				</xpath>										
				<xpath expr='//field[@name="type"]' position='replace'>
					<field name="type" invisible="True"/>
				</xpath>
				<xpath expr='//field[@name="categ_id"]' position='attributes'>
					<attribute name='invisible'></attribute>
				</xpath>
				<xpath expr='//field[@name="image_medium"]' position='attributes'>
					<attribute name='invisible'></attribute>
				</xpath>
				<xpath expr='//field[@name="sale_ok"]' position='attributes'>
					<attribute name='invisible'></attribute>
				</xpath>	
				<xpath expr='//field[@name="purchase_ok"]' position='attributes'>
					<attribute name='invisible'></attribute>
				</xpath>	
				<xpath expr='//field[@name="standart_price"]' position='attributes'>
					<attribute name='invisible'></attribute>
				</xpath>
				<xpath expr='//field[@name="description_sale"]' position='attributes'>
					<attribute name='invisible'></attribute>
				</xpath>
				<xpath expr='//notebook' position='attributes'>
					<attribute name='invisible'></attribute>
				</xpath>
				</group>				
				<group>
				    <field name='medic_ids' widget='many2many_tag' placeholder='Medicamentos do Produto'/>  
				</group>
			</field>
		</record>

		<!-- Tree view -->
