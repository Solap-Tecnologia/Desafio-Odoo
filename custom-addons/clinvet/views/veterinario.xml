<?xml version='1.0' encoding='utf-8'?>
<odoo>
	<data>

		<!-- Form View -->
		<record id='veterinario_form_view' model='ir.ui.view'>
			<field name='name'>veterinario.form</field>
			<field name='model'>res.partner</field>
			<field name='inherit_id' ref='base.view_partner_form' />
			<field name='arch' type='xml'>
				<xpath expr='//div[@name="button_box"]' position='attributes'>
					<attribute name='invisible'>1</attribute>
				</xpath>
				<xpath expr='//field[@name="company_type"]' position='attributes'>
					<attribute name='invisible'>1</attribute>
				</xpath>
				<xpath expr='//field[@name="parent_id"]' position='attributes'>
					<attribute name='invisible'>1</attribute>
				</xpath>
				<xpath expr='//field[@name="name"]' position='before'>
					<field name="is_veterinario" invisible='True'/>
				</xpath>
				<xpath expr='//field[@name="name"]' position='attributes'>
					<attribute name='placeholder'>Nome</attribute>
				</xpath>
				<xpath expr='//notebook' position='attributes'>
					<attribute name='invisible'>1</attribute>
				</xpath>
				<xpath expr='//label[@for="street"]' position='attributes'>
					<attribute name='for'>Endereço</attribute>
					<!--<label string='Endereço' />-->
				</xpath>
				<xpath expr='//field[@name="vat"]' position='attributes'>
					<attribute name='invisible'>1</attribute>
				</xpath>
				<xpath expr='//field[@name="category_id"]' position='attributes'>
					<attribute name='invisible'>1</attribute>
				</xpath>
				<xpath expr='//div[@name="button_box"]' position='before'>
					<field name='is_dono' invisible='True'/>
				</xpath>
				<xpath expr='//field[@name="function"]' position='attributes'>
					<attribute name='name'>crmv</attribute>
					<attribute name='placeholder'>Registro veterinario</attribute>
					<!--<field name='crmv' />-->
				</xpath>
				<xpath expr='//field[@name="crmv"]' position='after'>
					<field name='data_admissao'/>
				</xpath>
				<xpath expr='//field[@name="data_admissao"]' position='after'>
					<field name='data_demissao'/>
				</xpath>
				<xpath expr='//field[@name="data_demissao"]' position='after'>
					<field name='salario' widget='monetary' />
				</xpath>
				<xpath expr='//field[@name="website"]' position='attributes'>
					<attribute name='invisible'>1</attribute>
				</xpath>
				<xpath expr='//field[@name="title"]' position='attributes'>
					<attribute name='invisible'>1</attribute>
				</xpath>
				<xpath expr='//field[@name="lang"]' position='attributes'>
					<attribute name='invisible'>1</attribute>
				</xpath>
				<xpath expr='//field[@name="street2"]' position='attributes'>
					<attribute name='invisible'>1</attribute>
				</xpath>

				<xpath expr='//field[@name="street"]' position='attributes'>
					<attribute name='placeholder'>Rua, numero</attribute>
				</xpath>

				<xpath expr='//field[@name="city"]' position='attributes'>
					<attribute name='placeholder'>Cidade</attribute>
				</xpath>
				<xpath expr='//field[@name="state_id"]' position='attributes'>
					<attribute name='placeholder'>Estado</attribute>
				</xpath>
				<xpath expr='//field[@name="zip"]' position='attributes'>
					<attribute name='placeholder'>CEP</attribute>
				</xpath>
				<xpath expr='//field[@name="country_id"]' position='attributes'>
					<attribute name='placeholder'>País</attribute>
				</xpath>
				<!--<xpath expr='//field[@name="street"]' position='replace'>
					<field name='street' placeholder='Rua, numero'/>
				</xpath>
				<xpath expr='//field[@name="city"]' position='replace'>
					<field name='city' placeholder='Cidade' class="o_address_city" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
				</xpath>
				<xpath expr='//field[@name="state_id"]' position='replace'>
					<field name='state_id' placeholder='Estado' class="o_address_state" options="{&quot;no_open&quot;: True}" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}" context="{'country_id': country_id, 'zip': zip}"/>
				</xpath>
				<xpath expr='//field[@name="zip"]' position='replace'>
					<field name='zip' placeholder='CEP' class="o_address_zip" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
				</xpath>
				<xpath expr='//field[@name="country_id"]' position='replace'>
					<field name="country_id" placeholder="País" class="o_address_country" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
				</xpath>-->
			</field>
		</record>

