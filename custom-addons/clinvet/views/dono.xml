		<record model='ir.actions.act_window' id='janela_cadastro_donos'>
			<field name='name'>Clientes</field>
			<field name='res_model'>res.partner</field>
			<field name='view_type'>form</field>
			<field name='view_mode'>tree,form</field>
			<field name='view_id' ref='dono_form_view'/>
			<field name='context'>{'default_is_dono':True}</field>
			<field name="domain">[('is_dono','=',True)]</field>
			<field name='help' type='html'>
				<p class='oe_view_nocontent_create'>Cadastre os clientes</p>
			</field>
		</record>

		<menuitem 
			id='submenu_dono'
			name='Cliente'
			parent='menu_esquerdo_cadastros'
			action='janela_cadastro_donos'/>
		
