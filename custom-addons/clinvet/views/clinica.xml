<?xml version='1.0' encoding='utf-8'?>
<odoo>
	<data>

		<!-- Form view -->
        <record id="view_clinica_form" model="ir.ui.view">
            <field name="name">clinica.form</field>
            <field name="model">res.company</field>
            <field name="arch" type="xml">
                <form string="Clinica">
                  <sheet>
                    <field name="logo" widget="image"  class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Nome da Clínica"/>
                        </h1>
                    </div>

		    	<xpath expr='//div[@name="partner_id"]' position='attributes'>
					<attribute name='invisible'></attribute>
				</xpath>
				<xpath expr='//field[@name="street2"]' position='attributes'>
					<attribute name='invisible'></attribute>
				</xpath>
				<xpath expr='//field[@name="report_header"]' position='attributes'>
					<attribute name='invisible'></attribute>
				</xpath>
				<xpath expr='//field[@name="website"]' position='attributes'>
					<attribute name='invisible'></attribute>
				</xpath>
				<xpath expr='//field[@name="vat"]' position='attributes'>
					<attribute name='invisible'></attribute>
				</xpath>
				<xpath expr='//field[@name="currency_id"]' position='attributes'>
					<attribute name='invisible'></attribute>
				</xpath>
				<xpath expr='//field[@name="parent_id"]' position='attributes'>
					<attribute name='invisible'></attribute>
				</xpath>
				<xpath expr='//field[@name="sequence"]' position='attributes'>
					<attribute name='invisible'></attribute>
				</xpath>
				<xpath expr='//field[@name="report_footer"]' position='attributes'>
					<attribute name='invisible'></attribute>
				</xpath>
				<xpath expr='//group[@name="social_media"]' position='attributes'>
					<attribute name='invisible'></attribute>
				</xpath>

				<!--<xpath expr='//label[@name="name"]' position='replace'>
					<field name="name" default_focus="1" placeholder="Nome da Clínica" />
				</xpath>-->

				<xpath expr='//field[@name="company_registry"]' position='replace'>
					<field name="company_registry" default_focus="1" placeholder="CNPJ" />
				</xpath>
				<xpath expr='//field[@name="street"]' position='replace'>
					<field name="street" default_focus="0" placeholder="Avenida/Rua/Travessa" />
				</xpath>
                                <xpath expr='//field[@name="city"]' position='replace'>
					<field name="city" default_focus="1" placeholder="Cidade" />
				</xpath>
                                <xpath expr='//field[@name="state_id"]' position='replace'>
					<field name="state_id" default_focus="1" placeholder="Estado" />
				</xpath>
                                <xpath expr='//field[@name="zip"]' position='replace'>
					<field name="zip" default_focus="1" placeholder="CEP" />
				</xpath>
                                <xpath expr='//field[@name="country_id"]' position='replace'>
					<field name="country_id" default_focus="1" placeholder="País" />
				</xpath>
                                <xpath expr='//field[@name="phone"]' position='replace'>
					<field name="phone" default_focus="1" placeholder="Telefone" />
				</xpath>
                                <xpath expr='//field[@name="email"]' position='replace'>
					<field name="email" default_focus="1" placeholder="E-mail" />
				</xpath>

                        </sheet>
                      </form>
		    </field>
		</record>



