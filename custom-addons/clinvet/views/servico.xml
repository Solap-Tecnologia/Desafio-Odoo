<?xml version='1.0' encoding='utf-8'?>
<odoo>
	<data>
		
		<!-- Form view -->
		<record model='ir.ui.view' id='procedimento_form_view'>
			<field name='name'>procedimento.form</field>
			<field name='model'>vetclin.procedimento</field>
			<field name='arch' type='xml'>
				<form string='Cadastro de Procedimentos'>
					<sheet>
						<group>
							<field name='name' placeholder='Procedimento'/>
							<field name='desc_procedimento' placeholder='Descrição do procedimento' />
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<!-- Tree view -->
		<record model='ir.ui.view' id='procedimento_tree_view'>
			<field name='name'>procedimento.tree</field>
			<field name='model'>vetclin.procedimento</field>
			<field name='arch' type='xml'>
				<tree>
					<field name='id' />
					<field name='name' />
					<field name='desc_procedimento' />
				</tree>			
			</field>
		</record>

		<!-- Search view -->
		<record model='ir.ui.view' id='procedimento_search_view'>
			<field name='name'>procedimento.search</field>
			<field name='model'>vetclin.procedimento</field>
			<field name='arch' type='xml'>
				<search>
					<field name='id' />
					<field name='name' />
					<field name='desc_procedimento' />
				</search>			
			</field>
		</record>

		<!-- Registro que tem ação de abrir o form -->
		<record model='ir.actions.act_window' id='janela_cadastro_procedimento'>
			<field name='name'>Procedimento</field>
			<field name='res_model'>vetclin.procedimento</field>
			<field name='view_type'>form</field>
			<field name='view_mode'>tree,form</field>
			<field name='help' type='html'>
				<p class='oe_view_nocontent_create'>Cadastrar os procedimentos</p>
			</field>
		</record>

		<!-- Menu que abrirá o form ou o tree view-->
		<menuitem id='submenu_procedimento'
			name='Procedimentos'
			parent='menu_esquerdo_cadastros'
			action='janela_cadastro_procedimento'/>

	</data>
</odoo>
