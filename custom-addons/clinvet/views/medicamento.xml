<?xml version='1.0' encoding='utf-8'?>
<odoo>
	<data>		
		<!-- Form view -->
		<record model='ir.ui.view' id='medicamento_form_view'>
			<field name='name'>medicamento.form</field>
			<field name='model'>vetclin.medicamento</field>
			<field name='arch' type='xml'>
				<form string='Formulario Cadastro de Medicamentos'>
					<sheet>
						<group>
							<field name='name' placeholder='Nome do Medicamento'/>
							<field name='comp_quimica' placeholder='Composição Química' />
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<!-- Tree view -->
		<record model='ir.ui.view' id='medicamento_tree_view'>
			<field name='name'>medicamento.tree</field>
			<field name='model'>vetclin.medicamento</field>
			<field name='arch' type='xml'>
				<tree>
					<field name='id' />
					<field name='name' />
					<field name='comp_quimica' />
				</tree>			
			</field>
		</record>

		<!-- Search view -->
		<record model='ir.ui.view' id='medicamento_search_view'>
			<field name='name'>medicamento.search</field>
			<field name='model'>vetclin.medicamento</field>
			<field name='arch' type='xml'>
				<search>
					<field name='id' />
					<field name='name' />
					<field name='comp_quimica' />
				</search>			
			</field>
		</record>

		<!-- Registro que tem ação de abrir o form -->
		<record model='ir.actions.act_window' id='janela_cadastro_medicamento'>
			<field name='name'>Medicamento</field>
			<field name='res_model'>vetclin.medicamento</field>
			<field name='view_type'>form</field>
			<field name='view_mode'>tree,form</field>
			<field name='help' type='html'>
				<p class='oe_view_nocontent_create'>Cadastrar os medicamentos</p>
			</field>
		</record>
		<!-- Menu que abrirá o form ou o tree view-->
		<menuitem id='submenu_medicamento'
			name='Medicamento'
			parent='menu_esquerdo_cadastros'
			action='janela_cadastro_medicamento'/>
	</data>
</odoo>
